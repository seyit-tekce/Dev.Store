@page
@using Dev.Store.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@inject IHtmlLocalizer<StoreResource> L
@model Dev.Store.Web.Pages.Entities.Category.EditModalModel
@{
    Layout = null;
}
<form data-ajaxForm="true" asp-page="/Categories/EditModal" autocomplete="off" id="categoryForm">
    <abp-modal size="Large">
        <abp-modal-header title="@Model.ViewModel.Name"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id"></abp-input>
            <abp-input asp-for="ViewModel.IsVisible"></abp-input>
            <abp-input asp-for="ViewModel.Order"></abp-input>
            <abp-input asp-for="ViewModel.CategoryParentId"></abp-input>
            <abp-input data-toggle="slugify" data-target="#ViewModel_Link" asp-for="ViewModel.Name"></abp-input>
            <abp-input asp-for="ViewModel.Link"></abp-input>
            <abp-input asp-for="ViewModel.Description"></abp-input>
            <div class="mb-3">
                <label class="form-label" for="Files">@L["CoverPhoto"].Value</label><span> * </span>
                <br />
                @Model.Category.File.FileName
                <br />
                @(Html.Kendo().Upload().Name("Files").Multiple(false)
                    .Validation(x =>
                    {
                        x.AllowedExtensions("png", "jpg", "jpeg", "webp", "gif");

                    }).HtmlAttributes(new Dictionary<string, object> { { "required", "" } }))

                <span class="text-danger field-validation-valid" data-valmsg-for="Files" data-valmsg-replace="true"></span>
            </div>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
