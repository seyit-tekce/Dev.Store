@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@using Dev.Store.Localization
@inject IHtmlLocalizer<StoreResource> L
@model Dev.Store.Web.Pages.HomeSliders.CreateModalModel
@{
    Layout = null;
}

<abp-script src="/Pages/HomeSliders/CreateModal.js" />
<form data-ajaxForm="true" asp-page="/HomeSliders/CreateModal" autocomplete="off" id="slidersForm">
    <abp-modal size="ExtraLarge">
        <abp-modal-header title=" @(L["Enum:HomeSliderType:" +(int)Model.Type].Value) @L["Create"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="ViewModel.Type"></abp-input>
            <abp-input asp-for="ViewModel.Title"></abp-input>
            <abp-input asp-for="ViewModel.Subtitle"></abp-input>
            <abp-input asp-for="ViewModel.ButtonLink"></abp-input>
            <abp-input asp-for="ViewModel.ButtonText"></abp-input>
            <abp-input asp-for="ViewModel.File"></abp-input>
            <div id="drag-drop-area" style="width:100%;margin-bottom:25px"></div>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>