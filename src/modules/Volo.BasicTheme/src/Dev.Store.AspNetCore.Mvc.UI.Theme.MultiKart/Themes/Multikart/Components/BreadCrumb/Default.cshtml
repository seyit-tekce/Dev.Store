@using Volo.Abp.AspNetCore.Mvc.UI.Layout;
@model ContentLayout
@if (Model.ShouldShowBreadCrumb())
{
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="page-title">
                        <h2>@Model.Title</h2>
                    </div>
                </div>
                <div class="col-sm-6">
                    <nav aria-label="breadcrumb" class="theme-breadcrumb">
                        <ol class="breadcrumb">

                            @foreach (var crumb in Model.BreadCrumb.Items)
                            {
                                <li class="breadcrumb-item @(crumb.Text==Model.Title?"active":"")"><a href="@crumb.Url">@crumb.Text</a></li>
                            }

                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
}
