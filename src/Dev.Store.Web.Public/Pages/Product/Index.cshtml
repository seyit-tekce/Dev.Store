            </div>
        </div>
    </div>
</section>
<!-- Section ends -->
<!-- product-tab starts -->
<section class="tab-product m-0">
    <div class="container">
        <div class="row">
        </div>
    </div>
</section>
<!-- product-tab ends -->
<!-- product section start -->
<section class="section-b-space ratio_asos">
    <div class="container">
        <div class="row">
            <div class="col-12 product-related">
                <h2>@L["ReleatedProducts"].Value</h2>
            </div>
        </div>
        <div class="row search-product">
            @foreach (var product in Model.RelatedProducts)
            {
                <div class="col-xl-3 col-md-4 col-6">
                    <div class="product-box">
                        <div class="img-wrapper">
                            <div class="front">
                                <a href="/Product/@Model.Category.CategoryParent.Link/@Model.Category.Link/@product.Code">
                                    <img src="@product.MainImagePath"
                                         class="img-fluid blur-up lazyload bg-img" alt="">
                                </a>
                            </div>
                            <div class="back">
                                <a href="/Product/@Model.Category.CategoryParent.Link/@Model.Category.Link/@product.Code">
                                    <img src="@product.SecondImagePath"
                                         class="img-fluid blur-up lazyload bg-img" alt="">
                                </a>
                            </div>
                        </div>
                        <div class="product-detail">
                            <div>
                                <div class="rating">
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                </div>
                                <a href="/Product/@Model.Category.CategoryParent.Link/@Model.Category.Link/@product.Code">
                                    <h6>@product.Name</h6>
                                </a>
                                <h4>@product.Price.ToString("n2") ₺</h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
