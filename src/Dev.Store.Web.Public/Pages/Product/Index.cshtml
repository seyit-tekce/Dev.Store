@page "{category}/{subcategory}/{productlink}"
@using Dev.Store.Localization;
@using Dev.Store;
@using Microsoft.AspNetCore.Mvc.Localization;
@using System.Text.Json;
@using Volo.Abp.AspNetCore.Mvc.UI.Layout;
@model Dev.Store.Web.Public.Pages.Product.IndexModel
@inject IHtmlLocalizer<StoreResource> L
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = Model.Product.Name;
    PageLayout.Content.BreadCrumb.Add(L["Home"].Value, "/");
    PageLayout.Content.BreadCrumb.Add(Model.Category.CategoryParent.Name, "/Categories/" + Model.Category.CategoryParent.Link);
    PageLayout.Content.BreadCrumb.Add(Model.Category.Name, "/Categories/" + Model.Category.CategoryParent.Link + "/" + Model.Category.Link);
}
@section scripts{
    <abp-script src="/assets/js/sticky-kit.js"></abp-script>
    <abp-script src="/Pages/Product/index.js"></abp-script>
    <abp-script src="/Pages/Product/cart.js"></abp-script>
    <script>

        product.conts.product = @Html.Raw(JsonSerializer.Serialize(Model.Product))

    </script>


}
@section styles{
    <abp-style src="/Pages/Product/index.css"></abp-style>

}

<!-- section start -->
<section>
    <div class="collection-wrapper">
        <div class="container">
            <div class="row data-sticky_parent">
                <div class="col-sm-12 col-md-12 col-lg-8">
                    <div class="row">
                        <div class="col-lg-2 col-sm-2 col-xs-12">
                            <div class="row">
                                <div class="col-12 p-0">
                                    <div class="slider-right-nav">
                                        @foreach (var image in Model.Product.ProductImages)
                                        {
                                            <div>
                                                <img src="@(image.UploadFile.Small())" alt=""
                                                     class="img-fluid blur-up lazyload">
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-10 col-sm-12 col-xs-12 order-up">
                            <div class="product-right-slick">
                                @foreach (var image in Model.Product.ProductImages)
                                {
                                    <div>
                                        <img style="margin:auto;" src="@image.UploadFile.Big()" alt=""
                                             class="img-fluid blur-up lazyload image_zoom_cls-0">
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-lg-12">
                        <abp-accordion>
                            @if (Model.Product.ProductSizes.Any())
                            {
                                <abp-accordion-item title="@L["MeasurementOptions"].Value">
                                    <div class="size-slick" style="padding:25px">
                                        @foreach (var size in Model.Product.ProductSizes)
                                        {
                                            <a href="#" class="p-10 text-center " tabindex="0" data-size-price="@size.Price.ToString("n2") ₺" data-size-id="@size.Id">
                                                <img src="@Model.Product.ProductImages.FirstOrDefault(x=>x.IsMain ||true).UploadFile.Small()" style="margin:auto" class="@(Model.Product.Price==size.Price?"size-active":"")">
                                                <span class="text-center product-size-measurement">@(size.Height)x@(size.Width)</span>
                                                <p class="product-size-price"> @size.Price.ToString("n2") ₺ </p>
                                            </a>
                                        }
                                    </div>
                                </abp-accordion-item>
                            }
                            @if (Model.Product.ProductSets.Any())
                            {
                                <abp-accordion-item title="@L["SetOptions"].Value">
                                    <div class="single-product-tables">
                                        <table class="" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Parçalar</th>
                                                    <th>Birim Fiyat</th>
                                                    <th width="20%">Adet</th>
                                                    <th>Toplam Fiyat</th>
                                                </tr>

                                            </thead>

                                            <tbody>

                                                @foreach (var set in Model.Product.ProductSets)
                                                {

                                                    <tr>
                                                        <td>@set.SetName</td>
                                                        <td>@set.Price.ToString("n2") ₺</td>
                                                        <td>
                                                            @if (set.IsOptional)
                                                            {
                                                                <a href="#">takıma ekle</a>
                                                            }
                                                            else
                                                            {
                                                                <input type="number" class="numberstyle" min="0" step="1" value="@set.Amount" />
                                                            }
                                                        </td>
                                                        <td>@((set.Amount * set.Price).ToString("n2")) ₺</td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>

                                    </div>



                                </abp-accordion-item>
                            }
                            <abp-accordion-item title="@L["Details"].Value">
                                @Html.Raw(Model.Product.Description)
                            </abp-accordion-item>
                        </abp-accordion>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-4">
                    <div class="product-right pro_sticky_info">
                        <h2 class="price-detail text-center">@Model.Product.Price.ToString("n2") ₺</h2>
                        <div class="rating-section">
                            <div class="rating">
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                            </div>
                            @* <h6>120 ratings</h6>*@
                        </div>
                        @*  <ul class="color-variant">
                        <li class="bg-light0 active"></li>
                        <li class="bg-light1"></li>
                        <li class="bg-light2"></li>
                        </ul>*@
