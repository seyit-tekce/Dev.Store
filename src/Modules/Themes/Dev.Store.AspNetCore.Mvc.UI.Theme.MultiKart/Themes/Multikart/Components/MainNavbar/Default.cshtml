@using Dev.Store.AspNetCore.Mvc.UI.Theme.MultiKart.Themes.MultiKart.Components.Auth;
@using Dev.Store.AspNetCore.Mvc.UI.Theme.MultiKart.Themes.MultiKart.Components.Brand;
@using Dev.Store.AspNetCore.Mvc.UI.Theme.MultiKart.Themes.MultiKart.Components.Menu;
@using Dev.Store.AspNetCore.Mvc.UI.Theme.MultiKart.Themes.MultiKart.Components.Toolbar.Cart;
@using Dev.Store.AspNetCore.Mvc.UI.Theme.MultiKart.Themes.MultiKart.Components.Toolbar.LanguageSwitch;
@using Dev.Store.AspNetCore.Mvc.UI.Theme.MultiKart.Themes.Multikart.Components.SideNavbar;
@using Dev.Store.Localization;
@using Dev.Store.Web.UI.Branding;
@using Localization.Resources.AbpUi;
@using Microsoft.AspNetCore.Mvc.Localization;
@using Volo.Abp.Users;
@inject IHtmlLocalizer<StoreResource> L
@inject ICurrentUser user
@inject IDevBrandingProvider BrandingProvider
<header class="header-2">
    <div class="mobile-fix-option"></div>
    <div class="top-header top-header-dark">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="header-contact">
                        <ul>
                            <li>@BrandingProvider.AppName</li>
                            <li><i class="fa fa-phone" aria-hidden="true"></i>@BrandingProvider.PhoneNumber</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 text-end">
                    @await Component.InvokeAsync(typeof(AuthViewComponent))
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="main-menu border-section border-top-0">
                    <div class="menu-left">
                        @(await Component.InvokeAsync<SideNavbarMenuViewComponent>())

                    </div>
                    @(await Component.InvokeAsync<MainNavbarBrandViewComponent>())

                    <div class="menu-right pull-right">
                        <div class="icon-nav">
                            <ul>
                                <li class="onhover-div mobile-search">
                                    <div>
                                        <img src="/assets/images/icon/search.png" onclick="openSearch()"
                                             class="img-fluid blur-up lazyload" alt=""> <i class="ti-search"
                                                                                           onclick="openSearch()"></i>
                                    </div>
                                    <div id="search-overlay" class="search-overlay">
                                        <div>
                                            <span class="closebtn" onclick="closeSearch()"
                                                  title="Close Overlay">×</span>
                                            <div class="overlay-content">
                                                <div class="container">
                                                    <div class="row">
                                                        <div class="col-xl-12">
                                                            <form>
                                                                <div class="form-group">
                                                                    <input type="text" class="form-control"
                                                                           id="exampleInputPassword1"
                                                                           placeholder="Search a Product">
                                                                </div>
                                                                <button type="submit" class="btn btn-primary">
                                                                    <i class="fa fa-search"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li class="onhover-div mobile-setting">
                                    <div>
                                        <img src="/assets/images/icon/setting.png"
                                             class="img-fluid blur-up lazyload" alt=""> <i class="ti-settings"></i>
                                    </div>
                                    <div class="show-div setting">
                                        <h6>@L["Language"]</h6>
                                        @await Component.InvokeAsync(typeof(LanguageSwitchViewComponent))
                                    </div>
                                </li>
                                <li class="onhover-div mobile-cart">
                                    <div>
                                        <img src="/assets/images/icon/cart.png"
                                             class="img-fluid blur-up lazyload" alt=""> <i class="ti-shopping-cart"></i>
                                    </div>
                                    <ul class="show-div shopping-cart" style="display:flex;">
                                        @await Component.InvokeAsync(typeof(CartViewComponent))
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="main-nav-center">
                    <nav id="main-nav">
                        <div class="toggle-nav"><i class="fa fa-bars sidebar-bar"></i></div>
                        <ul id="main-menu" class="sm pixelstrap sm-horizontal">
                            <li>
                                <div class="mobile-back text-end">
                                    @L["Back"].Value<i class="fa fa-angle-right ps-2"
                                                       aria-hidden="true"></i>
                                </div>
                            </li>
                            <li><a href="/">@L["Home"].Value</a></li>
                            @(await Component.InvokeAsync<MainNavbarMenuViewComponent>())

                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>